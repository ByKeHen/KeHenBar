@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/js/layui/css/layui.css" rel="stylesheet" />
    <script src="~/js/layui/layui.js"></script>
    <title>登录</title>
</head>
<body style="background-color:#f2f2f2">
    <form class="layui-form layui-form-pane" style="width:600px;margin:0 auto;margin-top:100px">

        <div class="layui-form-item">
            <div class="layui-form-label">登录名</div>
            <div class="layui-input-block">
                <input name="dengluming" type="text" class="layui-input" required lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-form-label">密码</div>
            <div class="layui-input-block">
                <input name="mima" type="password" class="layui-input" required lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <button class="layui-btn" lay-submit lay-filter="denglu">登录</button>
        </div>
    </form>

    <script type="text/javascript">
        layui.use(['form', 'kehenbar'], function () {

            var form = layui.form(), kehenbar = layui.kehenbar;
            form.on('submit(denglu)', function (data) {

                kehenbar.send("/admin/LoginAc", data.field, function (res) {
                    if ("success" == res) {

                        window.location.href = "/admin/index";
                    } else {
                        layer.alert(res, function (index) {
                            layer.close(index);
                            return false;
                        })
                    }
                });
                return false;
            })
        })
    </script>
</body>
</html>
